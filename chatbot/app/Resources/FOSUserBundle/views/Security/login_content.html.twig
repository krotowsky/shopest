{% trans_default_domain 'FOSUserBundle' %}
{% if is_granted("IS_AUTHENTICATED_REMEMBERED")%}
{% else %}
    <div id="container" class="col-md-12" align="center">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="loginmodal-container">
                <div class="col-md-12" style="align-content: center">
                    {% if error %}
                        <h5 class="alert-danger" style="align: center">Invalid login or password</h5><br>
                    {% else %}
                    <h2 class="list-group-item" style="align-content: center">Login</h2>
                    {% endif %}
                    <form>
                        <li class="list-group-item">
                            <input type="text" id="username" name="_username" value="{{ last_username }}"
                                   required="required"/>
                        </li>
                        <li class="list-group-item">
                            <input type="password" id="password" name="_password" required="required"/>
                        </li>
                        <li class="list-group-item">
                            <input class= "form-check" type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                            <label for="remember_me">&nbsp Remeber me</label>
                        </li>
                        <li class="list-group-item">
                            <input class="btn btn-success" type="submit" id="_submit" name="_submit"
                                   value="{{ 'security.login.submit'|trans }}"/>
                        </li>
                    </form>

                    <div class="login-help">
                        <a href="/register">Register</a>
                    </div>
                </div>
            </div>
        </div>
{% endif %}